<h1>新建<%= @teaching_material.name %>的课程</h1>

<%= form_for([@teaching_material,@lesson], :url => teaching_material_lessons_path(@teaching_material)) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  	<p>
		<%= f.label :name, '名称' %>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :code, '编号' %>
		<%= f.text_field :code %>
	</p>
	
	<p>
	<%= f.label :consuming_time, "课程耗时" %>
	<%= f.select(:consuming_time, options_for_select({"30" => "30","45" => "45","60" => "60","75" => "75","90" => "90","105" => "105","120" => "120"}, "60") ) %>
	分钟
	</p>
	
  <div class="actions">
    <%= f.submit '保存' %>
  </div>
<% end %>


<%= link_to '返回', teaching_material_lessons_path %>
