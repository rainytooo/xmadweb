<h1>Listing advertisements</h1>

<table>
  <tr>
    <th>Domain</th>
    <th>Pagename</th>
    <th>Seqnum</th>
    <th>Tagname</th>
    <th>Display type</th>
    <th>Beizhu</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @advertisements.each do |advertisement| %>
  <tr>
    <td><%= advertisement.domain %></td>
    <td><%= advertisement.pagename %></td>
    <td><%= advertisement.seqnum %></td>
    <td><%= advertisement.tagname %></td>
    <td><%= advertisement.display_type %></td>
    <td><%= advertisement.beizhu %></td>
    <td><%= link_to 'Show', advertisement %></td>
    <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
    <td><%= link_to 'Destroy', advertisement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>


<% @clicks.each do |adclick| %>
	<tr>
		<td><%= adclick.id %></td>
		<td><%= adclick.tagname %></td>
		<td><%= adclick.beizhu %></td>
		<td><%= adclick.display_type %></td>
		<td><%= adclick.domain %></td>
		<td><%= adclick.pagename %></td>
		<td><%= adclick.clicks %></td>
		<td><%= adclick.record_date %></td>
	</tr>
<% end %>

</table>

