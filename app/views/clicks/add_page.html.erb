<h1>选择页面</h1>
<%= link_to "返回", clicks_path%>
  <%= form_tag("/clicks/save_page") do%>
  <table>
	  <tr>
	  	<th>选择</th>
	    <th>域名</th>
	    <th>分类</th>
	  </tr>

    <% @pages.each do |page| %>
      <tr>
        <td><%= radio_button_tag 'page', page.id %></td>
        <td><%= page.domain  %></td>
        <td><%= page.categroy  %></td>
      </tr>
    <% end %>
  </table>
  <%= hidden_field_tag 'click_id', @click %>
  <%= submit_tag("确定")%>
<% end %>