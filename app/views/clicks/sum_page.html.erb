<%= form_tag(sum_page_clicks_path, :method => :get) do %>
  <%= render 'search'%>
<% end %>

<h1>页面统计总表</h1>
<%= link_to '返回', clicks_path %>
<table>
  <tr>
  	<th>页面</th>
    <th>总点击量</th>
  </tr>

<% @all.each do |p| %>
  <tr>    
  	<td>
  		<% if p.page %>
  		<%= link_to WebPage.find(p.page).content, "/web_pages/detail?id=#{p.page}"  %>
  		<% else %>
  		no data
  		<% end %>
  	</td>
    <td>
      <% if p.sum_page %>
      <%= number_with_precision(p.sum_page, :precision => 0) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>