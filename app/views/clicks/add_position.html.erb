<h1>选择位置</h1>
<%= link_to "返回", clicks_path%>
  <%= form_tag("/clicks/save_position") do%>
  <table>
    <tr>
      <th>选择</th>
      <th>名称</th>
    </tr>

    <% @positions.each do |position| %>
      <tr>
        <td><%= radio_button_tag 'position', position.id %></td>
        <td><%= position.name  %></td>
      </tr>
    <% end %>
  </table>
  <%= hidden_field_tag 'click_id', @click %>
  <%= submit_tag("确定")%>
<% end %>