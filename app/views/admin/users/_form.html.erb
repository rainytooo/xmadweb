<%= form_for [:admin, @user] do |f| %>
<%= f.error_messages %>
<p>
<%= f.label :name, '姓名' %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :email, '电子邮件' %>
<%= f.text_field :email %>
</p>
<p>
<%= f.label :password, '密码' %>
<%= f.password_field :password %>
</p>
<p>
<%= f.label :password_confirmation, '密码确认' %>
<%= f.password_field :password_confirmation %>
</p>
<%= admins_only do %>
<p>
<%= f.check_box :admin %>
<%= f.label :admin, "是否是管理员?" %>
</p>
<% end %>
<p>
<%= f.select(:role, options_for_select({"学生" => "1","教师" => "2","督导助理" => "3","督导" => "4","客户经理" => "5"}, @user.role ? @user.role : 1) ) %>
<%= f.label :role, "用户角色" %>
</p>

<%= f.submit '保存' %>
<% end %>