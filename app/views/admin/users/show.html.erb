<h2><%= @user %></h2>
<p>
	<div>姓名:<%= @user.name %></div>
</p>
<p>
	<div>角色:<%= @user.rolename %></div>
</p>
<%= link_to "编辑用户", edit_admin_user_path(@user) %>
|
<%= link_to "删除用户", admin_user_path(@user), :method => :delete,
:confirm => "你确定要删除此用户?" %>
|
<% if @user.is_activity %>
	<%= link_to "失效", activity_admin_user_path(@user), :method => :post,
	:confirm => "你确定要让此用户失效?" %>
<% else %>
	<%= link_to "生效", activity_admin_user_path(@user), :method => :post,
	:confirm => "你确定要让此用户生效?" %>
<% end %>	